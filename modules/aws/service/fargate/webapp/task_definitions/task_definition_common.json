[
    {
      "name": "${project}-${environment}-${service_name}-web-container",
      "image": "${web_repository_url}:latest",
      "readonlyRootFilesystem": false,
      "essential": true,
      "environmentFiles": [],
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "networkMode": "awsvpc",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/${project}-${environment}-${service_name}-web${sfx}",
          "awslogs-region": "${region}",
          "awslogs-stream-prefix": "web"
        }
      }
    },
    {
      "name": "${project}-${environment}-${service_name}-app-container",
      "image": "${app_repository_url}:latest",
      "readonlyRootFilesystem": false,
      "secrets": [],
      "essential": false,
      "environmentFiles": [],
      "networkMode": "awsvpc",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/${project}-${environment}-${service_name}-app${sfx}",
          "awslogs-region": "${region}",
          "awslogs-stream-prefix": "app"
        }
      }
    }
  ]